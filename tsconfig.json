{
  "compilerOptions": {
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "lib",
    "moduleResolution": "node",
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": false,
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "exclude": ["src/**/*.test.ts", "src/**/*.spec.ts", "node_modules", "dist"]
}
